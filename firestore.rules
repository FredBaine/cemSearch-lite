rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read access to cemetery registry and locations for all users
    // This is appropriate for a public cemetery search application
    match /cemeteryRegistry/{document} {
      allow read: if true;
      allow write: if false; // Only allow writes through Cloud Functions or admin
    }
    
    match /locations/{document} {
      allow read: if true;
      allow write: if false; // Only allow writes through Cloud Functions or admin
    }
    
    // Deny access to all other collections by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}